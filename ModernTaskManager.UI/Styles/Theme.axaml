<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Styles.Resources>
		<ResourceDictionary>

			<ResourceDictionary.ThemeDictionaries>

				<!-- ===================== -->
				<!-- DARK THEME -->
				<!-- ===================== -->
				<ResourceDictionary x:Key="Dark">

					<!-- BACKDROP (NO 100% OPACO) -->
					<!-- ðŸ”§ FIX: permite transparencia simulada en Win7 -->
					<SolidColorBrush x:Key="WindowBackdropBrush">#B0202020</SolidColorBrush>

					<!-- CHROME / CONTENT (OPACOS A PROPÃ“SITO) -->
					<SolidColorBrush x:Key="ChromeBackgroundBrush">#FF202020</SolidColorBrush>
					<SolidColorBrush x:Key="ContentBackgroundBrush">#FF000000</SolidColorBrush>

					<SolidColorBrush x:Key="HeaderBackgroundBrush">#FF202020</SolidColorBrush>
					<SolidColorBrush x:Key="SurfaceBrush">#FF2C2C2C</SolidColorBrush>

					<SolidColorBrush x:Key="TextPrimaryBrush">#FFFFFFFF</SolidColorBrush>
					<SolidColorBrush x:Key="TextSecondaryBrush">#FFD0D0D0</SolidColorBrush>
					<SolidColorBrush x:Key="DividerBrush">#FF2C333A</SolidColorBrush>

					<!-- ðŸ”§ FIX: borde con alpha suave -->
					<SolidColorBrush x:Key="WindowBorderBrush">#40000000</SolidColorBrush>

					<SolidColorBrush x:Key="AccentBrush">#FF0078D4</SolidColorBrush>

					<SolidColorBrush x:Key="CaptionHoverBrush">#1FFFFFFF</SolidColorBrush>
					<SolidColorBrush x:Key="CaptionPressedBrush">#3FFFFFFF</SolidColorBrush>
				</ResourceDictionary>

				<!-- ===================== -->
				<!-- LIGHT THEME -->
				<!-- ===================== -->
				<ResourceDictionary x:Key="Light">

					<!-- BACKDROP (NO 100% OPACO) -->
					<!-- ðŸ”§ FIX: transparencia falsa en Win7 -->
					<SolidColorBrush x:Key="WindowBackdropBrush">#B0F3F3F3</SolidColorBrush>

					<!-- CHROME / CONTENT -->
					<SolidColorBrush x:Key="ChromeBackgroundBrush">#FFF3F3F3</SolidColorBrush>
					<SolidColorBrush x:Key="ContentBackgroundBrush">#FFFFFFFF</SolidColorBrush>

					<SolidColorBrush x:Key="HeaderBackgroundBrush">#FFFCFCFC</SolidColorBrush>
					<SolidColorBrush x:Key="SurfaceBrush">#FFFFFFFF</SolidColorBrush>

					<SolidColorBrush x:Key="TextPrimaryBrush">#FF000000</SolidColorBrush>
					<SolidColorBrush x:Key="TextSecondaryBrush">#FF505050</SolidColorBrush>
					<SolidColorBrush x:Key="DividerBrush">#FFE5E5E5</SolidColorBrush>

					<!-- ðŸ”§ FIX -->
					<SolidColorBrush x:Key="WindowBorderBrush">#20000000</SolidColorBrush>

					<SolidColorBrush x:Key="AccentBrush">#FF0078D4</SolidColorBrush>

					<SolidColorBrush x:Key="CaptionHoverBrush">#10000000</SolidColorBrush>
					<SolidColorBrush x:Key="CaptionPressedBrush">#20000000</SolidColorBrush>
				</ResourceDictionary>

			</ResourceDictionary.ThemeDictionaries>

			<!-- WindowCornerRadius se establece dinÃ¡micamente por BackdropService segÃºn la versiÃ³n de Windows -->
			<!-- NO definir aquÃ­ para evitar sobrescribir el valor calculado -->

			<FontFamily x:Key="StandardFont">
				Segoe UI Variable Display, Segoe UI, sans-serif
			</FontFamily>

		</ResourceDictionary>
	</Styles.Resources>

	<Style Selector="TextBlock">
		<Setter Property="FontFamily" Value="{StaticResource StandardFont}"/>
	</Style>

	<Style Selector="ScrollBar">
    <Setter Property="AllowAutoHide" Value="False" />
</Style>

<Style Selector="ScrollBar:vertical">
    <Setter Property="Width" Value="12" />
</Style>

<Style Selector="ScrollBar:vertical /template/ Border#TrackRoot">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="CornerRadius" Value="10" />
</Style>

<Style Selector="ScrollBar:vertical /template/ Thumb">
    <Setter Property="Background" Value="#4DFFFFFF" /> <Setter Property="CornerRadius" Value="20" /> <Setter Property="Width" Value="1" /> <Setter Property="MinWidth" Value="1" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="Transitions">
        <Transitions>
            <DoubleTransition Property="Width" Duration="0:0:0.1" />
            <DoubleTransition Property="Opacity" Duration="0:0:0.1" />
        </Transitions>
    </Setter>
</Style>

<Style Selector="ScrollBar /template/ RepeatButton">
    <Setter Property="IsVisible" Value="True" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Opacity" Value="0.5" />
</Style>

<Style Selector="ScrollBar:vertical /template/ RepeatButton#PART_LineUpButton Path">
    <Setter Property="Data" Value="M 0 4 L 4 0 L 8 4" /> <Setter Property="Stroke" Value="{DynamicResource TextSecondaryBrush}" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Fill" Value="Transparent" />
</Style>

<Style Selector="ScrollBar:vertical /template/ RepeatButton#PART_LineDownButton Path">
    <Setter Property="Data" Value="M 0 0 L 4 4 L 8 0" /> <Setter Property="Stroke" Value="{DynamicResource TextSecondaryBrush}" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Fill" Value="Transparent" />
</Style>

<Style Selector="ScrollBar:vertical:pointerover /template/ Thumb">
    <Setter Property="Width" Value="6" /> <Setter Property="Background" Value="#99FFFFFF" />
</Style>

<Style Selector="ScrollBar /template/ RepeatButton:pointerover">
    <Setter Property="Opacity" Value="1" />
</Style>

</Styles>
