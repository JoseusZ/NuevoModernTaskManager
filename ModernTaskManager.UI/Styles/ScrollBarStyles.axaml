<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ===================== -->
	<!-- SCROLLBAR - Windows 11 Style -->
	<!-- ===================== -->
	<!-- 
		Este archivo contiene todos los estilos para la barra de desplazamiento
		al estilo Windows 11. Incluye:
		- Barra delgada en reposo (8px) que se expande al hover (16px)
		- Flechas de navegación con animación de escala al presionar
		- Thumb con bordes redondeados
		- Mantiene el estado expandido mientras se arrastra
		
		RECURSOS NECESARIOS (definidos en Theme.axaml):
		- ScrollBarThumbBrush
		- ScrollBarThumbHoverBrush
		- ScrollBarTrackBrush
		- ScrollBarTrackHoverBrush
		- ScrollBarArrowBrush
	-->

	<!-- ===================== -->
	<!-- Thumb Base Style -->
	<!-- ===================== -->
	<Style Selector="Thumb.scrollBarThumb">
		<Setter Property="Background" Value="{DynamicResource ScrollBarThumbBrush}"/>
		<Setter Property="Template">
			<ControlTemplate>
				<!-- Área de hit-test más grande (transparente) con visual centrado -->
				<Panel>
					<!-- Área de captura invisible expandida -->
					<Border Background="Transparent" 
					        Margin="-4"/>
					<!-- Visual del thumb -->
					<Border Background="{TemplateBinding Background}"
					        CornerRadius="4"/>
				</Panel>
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="Thumb.scrollBarThumb:pointerover">
		<Setter Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}"/>
	</Style>

	<!-- ===================== -->
	<!-- Arrow Button Base -->
	<!-- ===================== -->
	<Style Selector="RepeatButton.scrollBarArrow">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Width" Value="16"/>
		<Setter Property="Height" Value="16"/>
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="Opacity" Value="0"/>
		<Setter Property="RenderTransform" Value="scale(1)"/>
		<Setter Property="RenderTransformOrigin" Value="50%,50%"/>
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
			</Transitions>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="{TemplateBinding Background}"
				        CornerRadius="{TemplateBinding CornerRadius}"
				        Padding="2">
					<ContentPresenter Content="{TemplateBinding Content}"
					                  HorizontalAlignment="Center"
					                  VerticalAlignment="Center"/>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Arrow Button Pressed - Animación de escala -->
	<Style Selector="RepeatButton.scrollBarArrow:pressed">
		<Setter Property="RenderTransform" Value="scale(0.85)"/>
	</Style>

	<!-- ===================== -->
	<!-- Page Button (track area) -->
	<!-- ===================== -->
	<Style Selector="RepeatButton.scrollBarPage">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="Transparent"/>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- ===================== -->
	<!-- Vertical ScrollBar -->
	<!-- ===================== -->
	<Style Selector="ScrollBar:vertical">
		<Setter Property="Width" Value="16"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Name="ScrollBarBorder"
				        Background="{TemplateBinding Background}"
				        CornerRadius="4">
					<Grid RowDefinitions="Auto,*,Auto">
						<!-- Flecha Arriba -->
						<RepeatButton Name="PART_LineUpButton"
						              Grid.Row="0"
						              Classes="scrollBarArrow"
						              HorizontalAlignment="Center"
						              VerticalAlignment="Center"
						              Margin="0,2,0,2">
							<PathIcon Data="M4 10L8 6L12 10"
							          Width="10"
							          Height="10"
							          Foreground="{DynamicResource ScrollBarArrowBrush}"/>
						</RepeatButton>

						<!-- Track -->
						<Track Name="PART_Track"
						       Grid.Row="1"
						       IsDirectionReversed="True"
						       Orientation="Vertical"
						       Minimum="{TemplateBinding Minimum}"
						       Maximum="{TemplateBinding Maximum}"
						       Value="{TemplateBinding Value, Mode=TwoWay}"
						       ViewportSize="{TemplateBinding ViewportSize}">
							<Track.DecreaseButton>
								<RepeatButton Name="PART_PageUpButton"
								              Classes="scrollBarPage"/>
							</Track.DecreaseButton>
							<Track.IncreaseButton>
								<RepeatButton Name="PART_PageDownButton"
								              Classes="scrollBarPage"/>
							</Track.IncreaseButton>
							<Track.Thumb>
								<Thumb Name="ScrollThumb" 
								       Classes="scrollBarThumb"
								       Width="6"
								       MinHeight="30"
								       Margin="5,2,5,2"/>
							</Track.Thumb>
						</Track>

						<!-- Flecha Abajo -->
						<RepeatButton Name="PART_LineDownButton"
						              Grid.Row="2"
						              Classes="scrollBarArrow"
						              HorizontalAlignment="Center"
						              VerticalAlignment="Center"
						              Margin="0,2,0,2">
							<PathIcon Data="M4 6L8 10L12 6"
							          Width="10"
							          Height="10"
							          Foreground="{DynamicResource ScrollBarArrowBrush}"/>
						</RepeatButton>
					</Grid>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Vertical ScrollBar - Estado normal (thumb delgado pero scrollbar ancha para captura) -->
	<Style Selector="ScrollBar:vertical /template/ Thumb#ScrollThumb">
		<Setter Property="Width" Value="4"/>
		<Setter Property="Margin" Value="6,2,6,2"/>
	</Style>

	<!-- Vertical ScrollBar Hover - Se expande visualmente -->
	<Style Selector="ScrollBar:vertical:pointerover">
		<Setter Property="Background" Value="{DynamicResource ScrollBarTrackHoverBrush}"/>
	</Style>

	<!-- Mostrar flechas al hover -->
	<Style Selector="ScrollBar:vertical:pointerover /template/ RepeatButton.scrollBarArrow">
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<!-- Expandir thumb al hover -->
	<Style Selector="ScrollBar:vertical:pointerover /template/ Thumb#ScrollThumb">
		<Setter Property="Width" Value="8"/>
		<Setter Property="Margin" Value="4,2,4,2"/>
		<Setter Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}"/>
	</Style>

	<!-- Vertical ScrollBar DRAGGING - Mantener expandido mientras se arrastra -->
	<Style Selector="ScrollBar:vertical Thumb#ScrollThumb:pressed">
		<Setter Property="Width" Value="8"/>
		<Setter Property="Margin" Value="4,2,4,2"/>
		<Setter Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}"/>
	</Style>

	<!-- ===================== -->
	<!-- Horizontal ScrollBar -->
	<!-- ===================== -->
	<Style Selector="ScrollBar:horizontal">
		<Setter Property="Height" Value="16"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Name="ScrollBarBorder"
				        Background="{TemplateBinding Background}"
				        CornerRadius="4">
					<Grid ColumnDefinitions="Auto,*,Auto">
						<!-- Flecha Izquierda -->
						<RepeatButton Name="PART_LineUpButton"
						              Grid.Column="0"
						              Classes="scrollBarArrow"
						              HorizontalAlignment="Center"
						              VerticalAlignment="Center"
						              Margin="2,0,2,0">
							<PathIcon Data="M10 4L6 8L10 12"
							          Width="10"
							          Height="10"
							          Foreground="{DynamicResource ScrollBarArrowBrush}"/>
						</RepeatButton>

						<!-- Track -->
						<Track Name="PART_Track"
						       Grid.Column="1"
						       IsDirectionReversed="False"
						       Orientation="Horizontal"
						       Minimum="{TemplateBinding Minimum}"
						       Maximum="{TemplateBinding Maximum}"
						       Value="{TemplateBinding Value, Mode=TwoWay}"
						       ViewportSize="{TemplateBinding ViewportSize}">
							<Track.DecreaseButton>
								<RepeatButton Name="PART_PageUpButton"
								              Classes="scrollBarPage"/>
							</Track.DecreaseButton>
							<Track.IncreaseButton>
								<RepeatButton Name="PART_PageDownButton"
								              Classes="scrollBarPage"/>
							</Track.IncreaseButton>
							<Track.Thumb>
								<Thumb Name="ScrollThumb"
								       Classes="scrollBarThumb"
								       Height="6"
								       MinWidth="30"
								       Margin="2,5,2,5"/>
							</Track.Thumb>
						</Track>

						<!-- Flecha Derecha -->
						<RepeatButton Name="PART_LineDownButton"
						              Grid.Column="2"
						              Classes="scrollBarArrow"
						              HorizontalAlignment="Center"
						              VerticalAlignment="Center"
						              Margin="2,0,2,0">
							<PathIcon Data="M6 4L10 8L6 12"
							          Width="10"
							          Height="10"
							          Foreground="{DynamicResource ScrollBarArrowBrush}"/>
						</RepeatButton>
					</Grid>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Horizontal ScrollBar - Estado normal -->
	<Style Selector="ScrollBar:horizontal /template/ Thumb#ScrollThumb">
		<Setter Property="Height" Value="4"/>
		<Setter Property="Margin" Value="2,6,2,6"/>
	</Style>

	<!-- Horizontal ScrollBar Hover - Se expande -->
	<Style Selector="ScrollBar:horizontal:pointerover">
		<Setter Property="Background" Value="{DynamicResource ScrollBarTrackHoverBrush}"/>
	</Style>

	<!-- Mostrar flechas al hover -->
	<Style Selector="ScrollBar:horizontal:pointerover /template/ RepeatButton.scrollBarArrow">
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<!-- Expandir thumb al hover -->
	<Style Selector="ScrollBar:horizontal:pointerover /template/ Thumb#ScrollThumb">
		<Setter Property="Height" Value="8"/>
		<Setter Property="Margin" Value="2,4,2,4"/>
		<Setter Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}"/>
	</Style>

	<!-- Horizontal ScrollBar DRAGGING - Mantener expandido mientras se arrastra -->
	<Style Selector="ScrollBar:horizontal Thumb#ScrollThumb:pressed">
		<Setter Property="Height" Value="8"/>
		<Setter Property="Margin" Value="2,4,2,4"/>
		<Setter Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}"/>
	</Style>

	<!-- ===================== -->
	<!-- ScrollViewer Settings -->
	<!-- ===================== -->
	<Style Selector="ScrollViewer">
		<Setter Property="AllowAutoHide" Value="False"/>
	</Style>

</Styles>
