<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ModernTaskManager.UI.ViewModels"
             xmlns:conv="using:ModernTaskManager.UI.Converters" 
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModernTaskManager.UI.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <UserControl.Resources>
        <conv:ResourceKeyConverter x:Key="ResourceKeyConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:SettingsViewModel/>
    </UserControl.DataContext>

    <ScrollViewer Padding="20,0,20,20">
        <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Left">
            
            <TextBlock Text="{DynamicResource Lang_Settings_Title}" FontSize="28" FontWeight="SemiBold" Margin="0,10,0,10"/>

            <StackPanel Spacing="5">
                <TextBlock Text="{DynamicResource Lang_Settings_Appearance}" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>

                <Border Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="4" 
                        Padding="16" 
                        BorderBrush="{DynamicResource DividerBrush}"
                        BorderThickness="1">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel Grid.Column="0" Spacing="2" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22M12,20.5V3.5C16.69,3.5 20.5,7.31 20.5,12C20.5,16.69 16.69,20.5 12,20.5Z" 
                                          Width="16" Height="16"/>
                                <TextBlock Text="{DynamicResource Lang_Settings_AppTheme}" FontSize="14"/>
                            </StackPanel>
                            <TextBlock Text="{DynamicResource Lang_Settings_AppThemeDesc}" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="24,0,0,0"/>
                        </StackPanel>

                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Themes}" 
                                  SelectedItem="{Binding SelectedThemeItem}"
                                  Width="250">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ResourceKey, Converter={StaticResource ResourceKeyConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>